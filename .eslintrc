{
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "semi": ["error", "never"],
        "quotes": ["error", "backtick"],
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "comma-dangle": [
            "error",
            {
                "objects": "only-multiline",
                "arrays": "only-multiline",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
          ],
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 8
        }
    }
}